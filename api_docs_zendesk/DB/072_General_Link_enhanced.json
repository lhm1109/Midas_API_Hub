{
  "NLNK": {
    "type": "object",
    "required": ["NODE1", "NODE2", "PROP_NAME", "REF_SYSTEM"],
    "properties": {
      "NODE1": {
        "type": "integer",
        "description": "Node 1 ID number"
      },
      "NODE2": {
        "type": "integer",
        "description": "Node 2 ID number"
      },
      "GROUP_NAME": {
        "type": "string",
        "description": "Boundary group name",
        "default": ""
      },
      "PROP_NAME": {
        "type": "string",
        "description": "General link property name"
      },
      "IEHP_NAME": {
        "type": "string",
        "description": "Inelastic hinge property name",
        "default": ""
      },
      "REF_SYSTEM": {
        "type": "integer",
        "description": "Reference coordinate system",
        "enum": [0, 1],
        "x-enum-labels": {
          "0": "Element",
          "1": "Global"
        }
      },
      "BETA_ANGLE": {
        "type": "number",
        "description": "Beta angle",
        "default": 0,
        "x-ui": {
          "visibleWhen": {
            "REF_SYSTEM": 0
          }
        }
      },
      "INPUT_METHOD": {
        "type": "integer",
        "description": "Input method",
        "enum": [0, 1, 2],
        "x-enum-labels": {
          "0": "Angle",
          "1": "3 Points",
          "2": "Vector"
        },
        "x-ui": {
          "visibleWhen": {
            "REF_SYSTEM": 1
          }
        }
      },
      "ANGLE_VALUES": {
        "type": "array",
        "description": "Angle",
        "items": {
          "type": "object",
          "required": ["VALUE"],
          "properties": {
            "VALUE": {
              "type": "array",
              "description": "Angle values",
              "items": {
                "type": "number"
              },
              "minItems": 3,
              "maxItems": 3
            }
          },
          "additionalProperties": false
        },
        "minItems": 1,
        "maxItems": 1,
        "x-ui": {
          "visibleWhen": {
            "REF_SYSTEM": 1,
            "INPUT_METHOD": 0
          }
        }
      },
      "POINT_VALUES": {
        "type": "array",
        "description": "Points",
        "items": {
          "type": "object",
          "required": ["VALUE"],
          "properties": {
            "VALUE": {
              "type": "array",
              "description": "Point values",
              "items": {
                "type": "number"
              },
              "minItems": 3,
              "maxItems": 3
            }
          },
          "additionalProperties": false
        },
        "minItems": 3,
        "maxItems": 3,
        "x-ui": {
          "visibleWhen": {
            "REF_SYSTEM": 1,
            "INPUT_METHOD": 1
          }
        }
      },
      "VECTOR_VALUES": {
        "type": "array",
        "description": "Points",
        "items": {
          "type": "object",
          "required": ["VALUE"],
          "properties": {
            "VALUE": {
              "type": "array",
              "description": "Point values",
              "items": {
                "type": "number"
              },
              "minItems": 3,
              "maxItems": 3
            }
          },
          "additionalProperties": false
        },
        "minItems": 2,
        "maxItems": 2,
        "x-ui": {
          "visibleWhen": {
            "REF_SYSTEM": 1,
            "INPUT_METHOD": 2
          }
        }
      }
    },
    "allOf": [
      {
        "if": {
          "properties": {
            "REF_SYSTEM": {
              "const": 1
            },
            "INPUT_METHOD": {
              "const": 0
            }
          }
        },
        "then": {
          "required": ["INPUT_METHOD", "ANGLE_VALUES"]
        }
      },
      {
        "if": {
          "properties": {
            "REF_SYSTEM": {
              "const": 1
            },
            "INPUT_METHOD": {
              "const": 1
            }
          }
        },
        "then": {
          "required": ["INPUT_METHOD", "POINT_VALUES"]
        }
      },
      {
        "if": {
          "properties": {
            "REF_SYSTEM": {
              "const": 1
            },
            "INPUT_METHOD": {
              "const": 2
            }
          }
        },
        "then": {
          "required": ["INPUT_METHOD", "VECTOR_VALUES"]
        }
      }
    ],
    "additionalProperties": false
  }
}
